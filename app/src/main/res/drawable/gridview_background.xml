<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C0C0C0" /> <!-- Shadow color -->
            <corners android:radius="4dp" /> <!-- Adjust corner radius -->
            <padding
                android:bottom="1dp" android:right="1dp" android:left="1dp" android:top="1dp"/>
        </shape>
    </item>
    <!-- Border and Background -->
    <item
        android:bottom="2dp"
        android:right="2dp"
        android:top="2dp"
        android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <stroke
                android:width="1dp"
                android:color="#DADADA" /> <!-- Border color -->
            <corners android:radius="4dp" /> <!-- Match corner radius with the shadow -->
        </shape>
    </item>
</layer-list>
